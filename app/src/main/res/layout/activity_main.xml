<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.choashuai.mvpdemo.MainActivity">

    <EditText
        android:id="@+id/id_et_username"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:hint="username"/>

    <EditText
        android:id="@+id/id_et_password"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:hint="password"/>

    <Button
        android:id="@+id/id_btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_clear"/>

    <Button
        android:id="@+id/id_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_login"/>

    <ProgressBar
        android:id="@+id/id_pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
